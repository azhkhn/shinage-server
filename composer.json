{
  "name": "mztx/shinage-server",
  "license": "MIT",
  "type": "project",
  "description": "Digital signage server component based on Symfony.",
  "autoload": {
    "psr-4": {
      "App\\": "src/",
      "mztx\\ShinageOnlinePlayerBundle\\": "_old_src/ShinageOnlinePlayerBundle/",
      "shinage\\server\\behat\\": "features/bootstrap/"
    },
    "classmap": [
      "src/Kernel.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/",
      "spec\\App\\": "spec/",
      "DoctrineMigrations\\": "src/Migrations/"
    }
  },
  "require": {
    "php": ">=7.4",
    "ext-gd": "*",
    "ext-intl": "*",
    "ext-json": "*",
    "mztx/todo-bundle": "~0.1",

    "doctrine/orm": "^2.5",
    "doctrine/doctrine-bundle": "^2.1",
    "doctrine/doctrine-cache-bundle": "^1.2",
    "friendsofsymfony/user-bundle": "~2.0",
    "studio-42/elfinder": "^2.1",
    "guzzlehttp/guzzle": "^6.5",
    "roave/security-advisories": "dev-master",
    "knplabs/knp-menu-bundle": "^3.0",
    "jms/serializer-bundle": "^3.7",
    "doctrine/doctrine-migrations-bundle": "^3.0",
    "mschop/pathogen": "^0.6.1",
    "symfony/flex": "^1.9",
    "symfony/twig-bundle": "^4.4",
    "symfony/monolog-bundle": "^3.5",
    "symfony/swiftmailer-bundle": "^3.5",
    "symfony/form": "^4.4",
    "symfony/security-bundle": "^4.4",
    "symfony/translation": "^4.4",
    "symfony/validator": "^4.4",
    "symfony/dotenv": "^4.4",
    "symfony/orm-pack": "^1.0",
    "symfony/asset": "^4.4",
    "symfony/mime": "^4.4",
    "symfony/expression-language": "^4.4",
    "sensio/framework-extra-bundle": "^5.2",
    "scheb/two-factor-bundle": "^v4.18",
    "endroid/qr-code-bundle": "^3.4.3",
    "symfony/cache": "^4.4",
    "psr/simple-cache": "^1.0"
  },
  "require-dev": {
    "symfony/phpunit-bridge": "^4.4",
    "doctrine/doctrine-fixtures-bundle": "^3.3",
    "phpspec/phpspec": "^6.2",
    "symfony/web-server-bundle": "^4.4",
    "behat/behat": "^3.7",
    "behat/mink-extension": "^2.3",
    "behat/mink-goutte-driver": "^1.2",
    "friends-of-behat/symfony-extension": "^2.0",
    "symplify/easy-coding-standard": "^8.3",
    "onurb/doctrine-yuml-bundle": "^1.1",
    "symfony/profiler-pack": "^1.0",
    "cweagans/composer-patches": "~1.0"
  },
  "conflict": {
    "symfony/symfony": "*"
  },
  "scripts": {
    "post-install-cmd": [
      "php install-git-hooks.php"
    ],
    "post-update-cmd": [
      "php install-git-hooks.php"
    ]
  },
  "config": {
    "platform": {
      "php": "7.4.10"
    }
  },
  "extra": {
    "symfony": {
      "allow-contrib": true
    },
    "patches": {
      "symplify/easy-coding-standard": {
        "Backport of Symfony BC fix": "etc/patches/ecs-8_9_backport1.patch"
      }
    },
    "composer-exit-on-patch-failure": true
  }
}
