{
    "name": "mztx/shinage-server",
    "license": "MIT",
    "type": "project",
    "description": "Digital signage server component based on Symfony.",
    "autoload": {
        "psr-4": {
            "AppBundle\\": "src/AppBundle/" ,
            "shinage\\server\\behat\\": "features/bootstrap/"
        },
        "classmap": [ "app/AppKernel.php", "app/AppCache.php" ]
    },
    "autoload-dev": {
        "psr-4": { "Tests\\": "tests/" }
    },
    "require": {
        "php": ">=7.0.0",
        "mztx/shinage-player-bundle": "^0.1",
        "symfony/symfony": "^3.2",
        "doctrine/orm": "^2.5",
        "doctrine/doctrine-bundle": "^1.6",
        "doctrine/doctrine-cache-bundle": "^1.2",
        "symfony/swiftmailer-bundle": "^2.3",
        "symfony/monolog-bundle": "^3.0",
        "symfony/polyfill-apcu": "^1.0",
        "sensio/distribution-bundle": "^5.0",
        "sensio/framework-extra-bundle": "^3.0.2",
        "incenteev/composer-parameter-handler": "^2.0",
        "friendsofsymfony/user-bundle": "~2.0@dev",
        "symfony/debug": "^3.2",
        "studio-42/elfinder": "2.1.x@dev",
        "rollerworks/password-strength-bundle": "^1.5",
        "guzzlehttp/guzzle": "^6.3",
        "roave/security-advisories": "dev-master",
        "knplabs/knp-menu-bundle": "^2.1",
        "jms/serializer-bundle": "^2.2"
    },
    "require-dev": {
        "sensio/generator-bundle": "^3.0",
        "symfony/phpunit-bridge": "^3.0",
        "squizlabs/php_codesniffer": "2.*",
        "doctrine/doctrine-fixtures-bundle": "^2.4",
        "phpspec/phpspec": "^4.0",
        "symfony/web-server-bundle": "^3.3",
        "behat/behat": "^3.4",
        "behat/mink-extension": "^2.2",
        "behat/mink-goutte-driver": "^1.2",
        "behat/symfony2-extension": "^2.1"
    },
    "scripts": {
        "symfony-scripts": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::buildBootstrap",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::clearCache",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installAssets",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installRequirementsFile",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::prepareDeploymentTarget",
            "AppBundle\\Composer\\ElFinderInstallerHandler::installElFinderAssets"
        ],
        "post-install-cmd": [
            "@symfony-scripts",
            "php install-git-hooks.php"
        ],
        "post-update-cmd": [
            "@symfony-scripts"
        ]
    },
    "extra": {
        "symfony-app-dir": "app",
        "symfony-bin-dir": "bin",
        "symfony-var-dir": "var",
        "symfony-web-dir": "web",
        "symfony-tests-dir": "tests",
        "symfony-assets-install": "relative",
        "incenteev-parameters": {
            "file": "app/config/parameters.yml"
        },
        "branch-alias": {
            "dev-master": "3.2-dev"
        }
    }
}
