<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>Shinage{% block title %}{% endblock %}</title>

        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <link rel="stylesheet" type="text/css" href="{{ asset('assets/all.min.css') }}">

        <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
        <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
        <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
        <![endif]-->

        {% block stylesheets %}{% endblock %}

        <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
        <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
        <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
        <link rel="manifest" href="/site.webmanifest">
        <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#5bbad5">
        <meta name="msapplication-TileColor" content="#da532c">
        <meta name="theme-color" content="#ffffff">
    </head>
    <body class="{{ app.request.attributes.get('_route') }}">
        {% include('navi/navigation.html.twig') %}

        <div id="mainWrapper">
            {# main content #}
            {% block body %}{% endblock %}

            <div id="global-dimmer" class="ui dimmer">
                <div class="ui loader"></div>
            </div>

            <div id="footer">
                Shinage Digital Signage ({{ version_checker.version }})
            </div>
        </div>

        <script src="{{ asset('assets/lib.min.js') }}"></script>
        <script src="{{ asset('assets/app.min.js') }}"></script>

        <script>
            $('.ui.dropdown').dropdown();
        </script>

        <script>
            $.notify.defaults({ autoHideDelay: 2000, showDuration: 250 });

            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    $.notify("{{ message|trans([], 'flashes') }}", { className: '{{ label }}', autoHideDelay: 10000 });
                {% endfor %}
            {% endfor %}
        </script>

        {% block scripts %}{% endblock %}


        <script>
            $(function() {
                //ajaxLoadHide();
            });
        </script>
    </body>
</html>
