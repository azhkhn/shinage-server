{% extends 'base.html.twig' %}

{% block body %}
    <div id="container">
        <h2>Dashboard</h2>
        <div class="dash-screen-wrapper">
            {% for screen in screens %}
                <div class="dash-screen">
                    <img class="preview" src="{{ path('management-dashboard-preview', {'screen_guid': screen.getGuid()}) }}">
                    <span class="name">{{ screen.getName() }}</span>
                </div>
            {% endfor %}
        </div>
    </div>

{% endblock %}

