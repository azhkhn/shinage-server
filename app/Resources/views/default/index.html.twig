            </div>

            <div id="next">
                <h2>Willkommen!</h2>
            </div>

            <div id="todolist">
                <ul>
                    {% for t in todos %}
                        <li class="todo-{{ t.getType() }}">
                            <span class="todo-li-text">{{ t.getText() }}</span>
                            <span class="todo-li-file">{{ t.getFile() }}</span>
                            <span class="todo-li-line">{{ 'Line'|trans }}: {{ t.getLine() }}</span>
                        </li>
                    {% endfor %}
                </ul>
            </div>
